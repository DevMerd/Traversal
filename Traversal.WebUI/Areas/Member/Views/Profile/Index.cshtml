@using Traversal.WebUI.Areas.Member.Models
@model UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="row">
    <div class="col-6">
        <div class="card">
        </div>
    </div>

</div>
<h1>Profil Düzenleme Sayfası</h1>

<form method="post" enctype="multipart/form-data">
    <label asp-for="Name">Adınız</label>
    <input type="text" asp-for="Name" class="form-control" />
    <br />

    <label asp-for="Surname">Soyadınız</label>
    <input type="text" asp-for="Surname" class="form-control" />
    <br />

    <label asp-for="Mail">Mail Adresiniz</label>
    <input type="text" asp-for="Mail" class="form-control" />
    <br />

    <label asp-for="Password">Şifreniz</label>
    <input type="password" asp-for="Password" class="form-control" />
    <br />

    <label asp-for="ConfirmPassword">Şifre Tekrar</label>
    <input type="password" asp-for="ConfirmPassword" class="form-control" />
    <br />

    <label asp-for="PhoneNumber">Telefon Numaranız</label>
    <input type="text" asp-for="PhoneNumber" class="form-control" />
    <br />
    <div class="form-group">
        <label asp-for="Image">
            <input type="file" asp-for="Image" />
        </label>
    </div>
    <br />
    <button class="btn btn-primary">Bilgileri Güncelle</button>
</form>

