@model Reservation
@{
    ViewData["Title"] = "NewReservation";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="row">
    <div class="card col-8 " style="background-color:#F5F7F8">
        <h1>Yeni Rezervasyon Sayfası</h1>
        <hr />
        <form method="post">
            <div class="form-group">
                <label>Lokasyon</label>
                @Html.DropDownListFor(r => r.Destination, (List<SelectListItem>)ViewBag.Values, new { @class = "form-control" })
                @* <select class="form-select-sm" asp-for="Destination" asp-items=""></select> *@
            </div>
            <div class="form-group">
                <label>Kişi Sayısı</label>
                <input type="text" asp-for="PersonCount" class="form-control" />
            </div>
            <div class="form-group">
                <label>Tarih</label>
                <input type="date" asp-for="ReservationDate" class="form-control" />
            </div>
            <div class="form-group">
                <label>Varsa Eklemek İstedikleriniz</label>
                <input type="text" asp-for="Description" class="form-control" />
            </div>
            <button class="btn btn-primary">Rezervasyon Yap</button>
        </form>
    </div>
</div>

